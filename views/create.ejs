<div class="container mt-5">
  <h1 class="mb-4">Create a New Post</h1>

  <form action="/submit" method="POST">
    
    <div class="mb-3">
      <label for="postTitle" class="form-label">Title</label>
      <input type="text" class="form-control" id="postTitle" name="title" placeholder="The Worlds Greatest Blog Post" required>
    </div>

    <div class="mb-3">
      <label for="postContent" class="form-label">Content</label>
      <textarea class="form-control" id="postContent" name="content" rows="10" placeholder="Start writing your story..." required></textarea>
    </div>

    <button type="submit" class="btn btn-primary btn-lg">Publish Post</button>
    
  </form>
</div>

