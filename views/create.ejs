<%- include("partials/header.ejs") %>

<div class="container mt-5">
  
  <!-- Page Header -->
  <div class="row mb-4">
    <div class="col">
      <h1 class="display-5 fw-bold">Create a New Post</h1>
      <p class="text-muted">Share your story with the world</p>
    </div>
  </div>

  <!-- Create Post Form -->
  <div class="row">
    <div class="col-lg-8">
      <form action="/submit" method="POST">
        
        <!-- Title Input -->
        <div class="mb-4">
          <label for="postTitle" class="form-label fw-semibold">Title</label>
          <input 
            type="text" 
            class="form-control form-control-lg" 
            id="postTitle" 
            name="title" 
            placeholder="The World's Greatest Blog Post" 
            required>
        </div>

        <!-- Content Textarea -->
        <div class="mb-4">
          <label for="postContent" class="form-label fw-semibold">Content</label>
          <textarea 
            class="form-control" 
            id="postContent" 
            name="content" 
            rows="12" 
            placeholder="Start writing your story..." 
            required></textarea>
        </div>

        <!-- Action Buttons -->
        <div class="d-flex gap-3">
          <button type="submit" class="btn btn-primary">Publish Post</button>
          <a href="/" class="btn btn-outline-secondary">Cancel</a>
        </div>
        
      </form>
    </div>
  </div>

</div>

<%- include("partials/footer.ejs") %>