<%- include("partials/header.ejs") %>

<div class="container mt-5">
  
  <!-- Page Header -->
  <div class="row mb-4">
    <div class="col">
      <h1 class="display-5 fw-bold">Edit Post</h1>
      <p class="text-muted">Make changes to your story</p>
    </div>
  </div>

  <!-- Edit Form -->
  <div class="row">
    <div class="col-lg-8">
      <form action="/edit/submit" method="POST">
        
        <!-- Hidden field to track which post we're editing -->
        <input type="hidden" name="postIndex" value="<%= index %>">

        <!-- Title Input -->
        <div class="mb-4">
          <label for="title" class="form-label fw-semibold">Title</label>
          <input 
            type="text" 
            class="form-control form-control-lg" 
            id="title"
            name="title" 
            value="<%= post.title %>" 
            placeholder="Enter your post title"
            required>
        </div>

        <!-- Content Textarea -->
        <div class="mb-4">
          <label for="content" class="form-label fw-semibold">Content</label>
          <textarea 
            class="form-control" 
            id="content"
            name="content" 
            rows="12" 
            placeholder="Write your story..."
            required><%= post.content %></textarea>
        </div>

        <!-- Action Buttons -->
        <div class="d-flex gap-3">
          <button type="submit" class="btn btn-warning">
            Update Post
          </button>
          <a href="/view" class="btn btn-outline-secondary">
            Cancel
          </a>
        </div>

      </form>
    </div>
  </div>

</div>

<%- include("partials/footer.ejs") %>